<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="rdAir-manager" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/rdAirDS</jta-data-source>
        <class>com.realdolmen.rdAir.domain.Airline</class>
        <class>com.realdolmen.rdAir.domain.Customer</class>
        <class>com.realdolmen.rdAir.domain.Flight</class>
        <class>com.realdolmen.rdAir.domain.FlightClass</class>
        <class>com.realdolmen.rdAir.domain.Location</class>
        <class>com.realdolmen.rdAir.domain.Order</class>
        <class>com.realdolmen.rdAir.domain.PriceModifier</class>
        <class>com.realdolmen.rdAir.domain.PriceModifierFlat</class>
        <class>com.realdolmen.rdAir.domain.PriceModifierPercent</class>
        <class>com.realdolmen.rdAir.domain.Region</class>
        <class>com.realdolmen.rdAir.domain.Route</class>
        <class>com.realdolmen.rdAir.domain.User</class>
        <class>com.realdolmen.rdAir.domain.RDEmployee</class>
        <class>com.realdolmen.rdAir.domain.Ticket</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

        </properties>
    </persistence-unit>
</persistence>
