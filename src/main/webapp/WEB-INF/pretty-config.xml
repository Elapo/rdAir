<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="view-index">
        <pattern value="/" />
        <view-id value="/index.xhtml" />
    </url-mapping>
    <url-mapping id="view-search">
        <pattern value="/searchresult" />
        <view-id value="/searchresults.xhtml" />
    </url-mapping>
    <url-mapping id="view-details">
        <pattern value="/searchdetails" />
        <view-id value="/searchedandselectedflightdetails.xhtml" />
    </url-mapping>
    <url-mapping id="view-login">
        <pattern value="/login" />
        <view-id value="/login.xhtml" />
    </url-mapping>
    <url-mapping id="view-register">
        <pattern value="/register" />
        <view-id value="/register.xhtml" />
    </url-mapping>
    <url-mapping id="view-booking">
        <pattern value="/booking" />
        <view-id value="/booking.xhtml" />
    </url-mapping>
    <url-mapping id="view-bookingcreditcard">
        <pattern value="/bookingcreditcard" />
        <view-id value="/bookingcreditcard.xhtml" />
    </url-mapping>
    <url-mapping id="view-invoices">
        <pattern value="/invoices" />
        <view-id value="/invoices.xhtml" />
    </url-mapping>
    <url-mapping id="view-invoicesdetails">
        <pattern value="/invoicesdetails" />
        <view-id value="/invoicesdetails.xhtml" />
    </url-mapping>
    <url-mapping id="view-promotions">
        <pattern value="/promotions" />
        <view-id value="/promotions.xhtml" />
    </url-mapping>
    <url-mapping id="view-profile">
        <pattern value="/account/profile"/>
        <view-id value="/account/SECURE.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-home">
        <pattern value="/admin"/>
        <view-id value="/account/admin/dashboard.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-locations">
        <pattern value="/admin/locations"/>
        <view-id value="/account/admin/locations.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-pricing">
        <pattern value="/admin/pricing"/>
        <view-id value="/account/admin/pricing.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-partners">
        <pattern value="/admin/partners"/>
        <view-id value="/account/admin/partners.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-partner-details">
        <pattern value="admin/partner/#{id}"/>
        <view-id value="/account/admin/partnerdetails.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-partners-details">
        <pattern value="/admin/partners/#{id}"/>
        <view-id value="/account/admin/partnerdetails.xhtml"/>
    </url-mapping>
    <url-mapping id="view-admin-reports">
        <pattern value="/admin/reports"/>
        <view-id value="/account/admin/reports.xhtml"/>
    </url-mapping>
    <url-mapping id="view-partner-home">
        <pattern value="/partner/dashboard"/>
        <view-id value="/account/partner/dashboard.xhtml"/>
    </url-mapping>
    <url-mapping id="view-partner-routes">
        <pattern value="/partner/routes"/>
        <view-id value="/account/partner/routes.xhtml"/>
    </url-mapping>
    <url-mapping id="view-partner-flights">
        <pattern value="/partner/flights"/>
        <view-id value="/account/partner/flights.xhtml"/>
    </url-mapping>
    <url-mapping id="view-partner-promo">
        <pattern value="/partner/promo"/>
        <view-id value="/account/partner/promo.xhtml"/>
    </url-mapping>
    <url-mapping id="view-partner-reports">
        <pattern value="/partner/reports"/>
        <view-id value="/account/partner/reports.xhtml"/>
    </url-mapping>
</pretty-config>